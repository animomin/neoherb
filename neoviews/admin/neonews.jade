div.row.wrapper.border-bottom.white-bg.page-heading.animated.fadeInRight
  div.col-lg-10
    h2 NeoSoftBank News
  div.col-lg-2

.wrapper.wrapper-content.animated.fadeInRight.ecommerce
  .row
    .col-lg-12
      .tabs-container
        ul.nav.nav-tabs        
          li.active
            a(data-toggle="tab",href="#tab-1") New's List
          li
            a(data-toggle="tab",href="#tab-2") 새로작성
        .tab-content
          // 리스트
          .tab-pane.active#tab-1  
            hr
            table.table.table-hover.table-mail.table-bordered
              thead
                tr
                  th.text-center(width="120px") 상태
                  th.text-center(width="120px") 구분
                  th.text-center 제목
                  th.text-center(width="10%") 공지일
                  th.text-center(width="10%") 공지일수
                  th.text-center(width="10%") -
                  th.text-center(width="10%") 작성일
              tbody#notice-list
                tr.unread
                  td
                    select.form-control
                      option(selected) 공지중
                      option 공지종료
                  td
                    select.form-control
                      option(selected) 이벤트
                      option 공지
          .tab-pane#tab-2
            hr
            form.form-horizontal(action="/admin/notice",method="post",form-type="news")
              .form-group
                label.col-sm-2.control-label 구분:
                .col-sm-5.dropdown-group
                  button.btn.btn-primary.dropdown-toggle(type='button',data-toggle='dropdown',data-original-title='공지구분'): span(data-bind='label') 공지사항 
                    span.caret
                  ul.dropdown-menu.notice-input-items#notice-kind-menu
                    li.active: a.dropdown-item(data-value="0") 공지사항
                    li: a.dropdown-item(data-value="1") 이벤트
              .form-group
                label.col-sm-2.control-label 제목:
                .col-sm-10
                  input.form-control.notice-input-items#notice-title(type="text",placeholder="공지사항 제목을 입력해주세요.", required, autocomplete="off")
              .form-group
                label.col-sm-2.control-label 공지일 / 공지일수:
                .col-sm-8
                  .input-group.date
                    span.input-group-addon
                      i.fa.fa-calendar
                    input.form-control.datepicker.notice-input-items#notice-date(type="text",required)
                    span.input-group-addon 공지일수
                    .input-group-btn.dropdown-group
                      button.btn.btn-primary.dropdown-toggle(type="button",data-toggle="dropdown", data-original-title="공지일수"): span(data-bind='label') 선택안함 
                        span.caret
                      ul.dropdown-menu.notice-input-items#notice-day-menu
                        li.active: a.dropdown-item(data-value="0") 선택안함                            
                        .dropdown-divider(role="separator")
                        li: a.dropdown-item(data-value="1") 1일                            
                        li: a.dropdown-item(data-value="7") 7일
                        li: a.dropdown-item(data-value="14") 14일
                        li: a.dropdown-item(data-value="30") 30일     
              .form-group.h-200  
                textarea.summernote.notice-input-items#notice-content(name="notice-content",required)
                .clearfix
              .form-group.pull-right
                button.btn.btn-warning(type="submit")
                  i.fa.fa-floppy-o 
                  |  저장
